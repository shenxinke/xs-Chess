/**
 * 
 */


body .layerTC{
	background-color: transparent !important;
	background:transparent url(alertbg.png) no-repeat center/100% 100%;
	width: 6.07rem;
	height: 4.07rem;
	max-width: initial;
	box-shadow: initial;
	margin: auto;
    position: fixed;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0;
}
body .layerTC .layui-layer-content{
	height: 2.6rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.35rem;
    color: #fff;
    padding: 0 0.3rem;
    margin-top: 0.1rem;
    line-height: 0.5rem;
    text-align: center;
}

body .layerTC .layui-layer-setwin .layui-layer-close2{
	width: 0rem;
	height: 0rem;
	left: 0.15rem;
}
body .layerTC .layui-layer-setwin .layui-layer-close2:after{
	content: '';
	display: block;
	width: 0.7rem;
	height: 0.7rem;
	background: url(resclose.png) no-repeat center/100% 100%;
}


body .layerTC .layui-layer-btn{
	display: flex;
    align-items: center;
    justify-content: space-around;
}


body .layerTC .layui-layer-btn a{
	width: 1.60rem;
	height: 0.7rem;
	font-size:12px;
	position: relative;
	background-color: transparent !important;
	border: none;
	outline: none;
}
body .layerTC .layui-layer-btn .layui-layer-btn0:after{
	content: '';
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: url(yes.png)no-repeat center/100% 100%; 
}
body .layerTC .layui-layer-btn .layui-layer-btn1:after{
	content: '';
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: url(no.png)no-repeat center/100% 100%; 
}


/* 下一题按钮 */
body .layerTC.skin1 .layui-layer-btn .layui-layer-btn0:after{
	content: '';
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: url(xyt.png)no-repeat center/100% 100%; 
}

/* 返回按钮 */
body .layerTC.skin1 .layui-layer-btn .layui-layer-btn1:after{
	content: '';
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: url(fh.png)no-repeat center/100% 100%; 
}




/*加载中*/
body .layerLoad{
	background: 0 0;
    box-shadow: none;
}
body .layerLoad{
	width: 1.98rem;
	height: 1.98rem;
}
body .layerLoad  .layui-layer-loading0{
	width: 1.98rem;
	height: 1.98rem;
	background:url(loading-0.gif) no-repeat;
	background-size:100% 100% ;
}







/* 弹层 */
body .layerOpen{
	background: none;
	box-shadow: none;
}
body .layerOpen .layui-layer-setwin .layui-layer-close2{
	width: 0rem;
	height: 0rem;
	left: 0.15rem;
}
body .layerOpen .layui-layer-setwin .layui-layer-close2:after{
	content: '';
	display: block;
	width: 0.7rem;
	height: 0.7rem;
	background: url(resclose.png) no-repeat center/100% 100%;
}
body .layerOpen .layui-layer-content{
	width: 100%;height:100%;
	overflow:hidden;
}

.msg-yes{
	width:5.3rem;
	height:5.3rem;
	background: url(right-min.png) no-repeat center/100% 100%;
	border:none
}
.msg-no{
	width:5.3rem;
	height:5.3rem;
	background: url(wrong-min.png) no-repeat center/100% 100%;
	border:none
}

.layerRight{
	width:7.52rem;
	height: 6.37rem;
	box-shadow: none;
	background: url(right-min.png) no-repeat top center/100%;; 
}

.layerWrong{
	width:7.52rem;
	height: 6.37rem;
	box-shadow: none;
	background: url(wrong-min.png) no-repeat top center/100%;; 
}


.layerRight .layui-layer-btn-,.layerWrong .layui-layer-btn{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	text-align: center;
}


.layerRight .layui-layer-btn .layui-layer-btn0 , .layerWrong .layui-layer-btn .layui-layer-btn0{
	width:1.61rem;
	height:0.72rem;
	text-align:center;
	line-height:0.72rem;
	font-size:0.3rem;
	border:none;
	margin-right:1rem;
	background: url(confirm.png) no-repeat center/100% 100%;
}
.layerRight .layui-layer-btn .layui-layer-btn1,.layerWrong .layui-layer-btn .layui-layer-btn1{
	width:1.61rem;
	height:0.72rem;
	text-align:center;
	line-height:0.72rem;
	font-size:0.3rem;
	border:none;
	color:#fff;
	background: url(cancel.png) no-repeat center/100% 100%;
}
