<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_weight="0.65"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cass_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:text="吃子"
            android:textColor="@color/color_573800"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_weight="0.35"
        android:gravity="left|center">

        <Button
            android:id="@+id/start_theme_but"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/prepare"
            android:text="开始备课"
            android:textColor="@color/color_914500"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/look_theme_but"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/look_prepare"
            android:text="查看备课"
            android:textColor="@color/color_0149cd"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>