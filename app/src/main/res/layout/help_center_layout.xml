<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout"/>

    <RelativeLayout
        android:layout_width="@dimen/dp_332"
        android:layout_height="@dimen/dp_422"
        android:background="@mipmap/about_us_bg"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        >

        <ScrollView
            android:layout_width="@dimen/dp_332"
            android:layout_height="@dimen/dp_300"
            android:layout_marginTop="@dimen/dp_60"
            >
            <RelativeLayout
                android:layout_width="@dimen/dp_332"
                android:layout_height="@dimen/dp_300"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/help_content_id1"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/help_content_id2"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:layout_below="@+id/help_content_id1"
                    android:layout_marginTop="@dimen/dp_5"
                    />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dp_232"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:src="@mipmap/helper_title" />

</RelativeLayout>
