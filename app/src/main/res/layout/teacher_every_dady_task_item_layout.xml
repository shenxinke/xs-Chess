<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@mipmap/teacher_daily_mission_item_bg" />

    <ImageView
        android:id="@+id/image_ok"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone"
        android:background="@mipmap/teacher_daily_mission_item_ok"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <ImageView
        android:id="@+id/teacher_daily_mission_item_foot"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_15"
        android:background="@mipmap/teacher_daily_mission_item_foot"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_ff0014"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/teacher_daily_mission_item_foot"
        app:layout_constraintLeft_toLeftOf="@+id/teacher_daily_mission_item_foot"
        app:layout_constraintRight_toRightOf="@+id/teacher_daily_mission_item_foot"
        app:layout_constraintTop_toTopOf="@+id/teacher_daily_mission_item_foot" />


</android.support.constraint.ConstraintLayout>