<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_170"
        android:background="@drawable/shape_integral_shopping_mall_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/alreadyOwned"
        android:visibility="gone"
        android:background="@mipmap/integral_shopping_mall_already_owned"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_77"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/color_ba3200"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/head_image"
        app:layout_constraintTop_toTopOf="@+id/head_image" />

    <TextView
        android:id="@+id/text_describe"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_55"
        android:gravity="fill"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/head_image"
        app:layout_constraintLeft_toLeftOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontalListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_155"
        android:layout_marginTop="@dimen/dp_5"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintTop_toBottomOf="@+id/image_background"/>

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>