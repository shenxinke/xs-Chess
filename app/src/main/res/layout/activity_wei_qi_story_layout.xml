<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/story_image_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/shapestory_image_backgrou"
        app:layout_constraintDimensionRatio="w,9:16"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xswq.chess.myapplication.customview.WeiQiStoryImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/story_image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/story_image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/story_image_bg"
        app:layout_constraintRight_toRightOf="@+id/story_image_bg"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        app:layout_constraintDimensionRatio="w,9:16" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/story_rebroadcast"
        app:layout_constraintLeft_toLeftOf="@+id/story_image_bg"
        app:layout_constraintRight_toRightOf="@+id/story_image_bg"
        app:layout_constraintTop_toTopOf="@+id/story_image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/story_image_bg"
        android:background="@mipmap/wei_qi_iamge_rebroadcast"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_70" />
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/story_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/story_image_bg" />

    <SeekBar
        android:id="@+id/story_seekBar"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/start_time"
        app:layout_constraintLeft_toRightOf="@+id/start_time"
        app:layout_constraintRight_toLeftOf="@+id/end_time"
        app:layout_constraintTop_toTopOf="@+id/start_time" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintRight_toLeftOf="@+id/wei_qi_image_list"
        app:layout_constraintTop_toBottomOf="@+id/story_image_bg" />

    <ImageView
        android:id="@+id/wei_qi_image_list"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/wei_qi_image_list"
        app:layout_constraintBottom_toBottomOf="@+id/end_time"
        app:layout_constraintRight_toRightOf="@+id/story_image_bg"
        app:layout_constraintTop_toTopOf="@+id/end_time" />


    <ImageView
        android:id="@+id/wei_qi_iamge_play"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/wei_qi_iamge_suspend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_time" />

    <ImageView
        android:id="@+id/wei_qi_iamge_suspend"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/wei_qi_iamge_play"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_time" />


    <ImageView
        android:id="@+id/wei_qi_image_last"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/wei_qi_iamge_last"
        app:layout_constraintRight_toLeftOf="@+id/wei_qi_iamge_play"
        app:layout_constraintTop_toBottomOf="@+id/start_time" />


    <ImageView
        android:id="@+id/wei_qi_iamge_next"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/wei_qi_iamge_next"
        app:layout_constraintLeft_toRightOf="@+id/wei_qi_iamge_play"
        app:layout_constraintTop_toBottomOf="@+id/start_time" />

</android.support.constraint.ConstraintLayout>