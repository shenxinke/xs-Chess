<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <Button
        android:id="@+id/grade_table"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_35"
        android:background="@drawable/tab_friend_select"
        android:onClick="buttonOnClick"
        android:text="成绩表"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frame_bg"
        app:layout_constraintLeft_toLeftOf="@+id/frame_bg" />

    <Button
        android:id="@+id/against_the_table"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_35"
        android:background="@drawable/tab_friend_unselect"
        android:onClick="buttonOnClick"
        android:text="对阵表"
        android:textColor="@color/color_0461d2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frame_bg"
        app:layout_constraintLeft_toRightOf="@+id/grade_table" />

    <FrameLayout
        android:id="@+id/frame_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_105"
        android:background="@mipmap/competition_management_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>