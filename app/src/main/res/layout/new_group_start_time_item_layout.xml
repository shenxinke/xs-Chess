<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="right"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintRight_toLeftOf="@+id/edit_text_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_text_time"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/textview_round_border"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_11"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_name" />

    <ImageView
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_11"
        android:background="@mipmap/arrows_down"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_time"
        app:layout_constraintRight_toRightOf="@+id/edit_text_time"
        app:layout_constraintTop_toTopOf="@+id/edit_text_time" />


</android.support.constraint.ConstraintLayout>