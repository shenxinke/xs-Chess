<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_230">

    <RelativeLayout
        android:id="@+id/courseware_id"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_196"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_196"
            android:scaleType="fitXY"
            android:src="@mipmap/video_practice_bgs" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/courseware_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/courseware_exercises"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


        <ImageView
            android:id="@+id/videos"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="23dp"
            android:src="@mipmap/video" />

        <ImageView
            android:id="@+id/practices"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignStart="@+id/videos"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:src="@mipmap/practice" />

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_courseware_lock"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_lock"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/image_courseware_lock"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/courseware_video_name"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_200"
        android:gravity="center"
        android:maxEms="7"
        android:textColor="@color/courseware_text"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
