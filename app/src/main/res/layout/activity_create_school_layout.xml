<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_65"
        android:background="@mipmap/personal_juxing_bg227"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shape_punching_card_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_punching_card_record"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_school_name"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="学校名称"
        android:textColor="@color/color_573800"
        android:layout_marginLeft="@dimen/dp_5"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shape_punching_card_record"
        app:layout_constraintLeft_toLeftOf="@+id/shape_punching_card_record"
        app:layout_constraintRight_toLeftOf="@+id/text_techer_number"
        app:layout_constraintTop_toTopOf="@+id/shape_punching_card_record" />

    <TextView
        android:id="@+id/text_techer_number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="老师数量"
        android:textColor="@color/color_573800"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shape_punching_card_record"
        app:layout_constraintLeft_toRightOf="@+id/text_school_name"
        app:layout_constraintRight_toLeftOf="@+id/text_class_number"
        app:layout_constraintTop_toTopOf="@+id/shape_punching_card_record" />

    <TextView
        android:id="@+id/text_class_number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="班级数量"
        android:textColor="@color/color_573800"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shape_punching_card_record"
        app:layout_constraintLeft_toRightOf="@+id/text_techer_number"
        app:layout_constraintRight_toLeftOf="@+id/text_sutdents_number"
        app:layout_constraintTop_toTopOf="@+id/shape_punching_card_record" />

    <TextView
        android:id="@+id/text_sutdents_number"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="学生数量"
        android:textColor="@color/color_573800"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shape_punching_card_record"
        app:layout_constraintLeft_toRightOf="@+id/text_class_number"
        app:layout_constraintRight_toLeftOf="@+id/text_operation"
        app:layout_constraintTop_toTopOf="@+id/shape_punching_card_record" />

    <TextView
        android:id="@+id/text_operation"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="操作"
        android:textColor="@color/color_573800"
        android:textSize="13sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/shape_punching_card_record"
        app:layout_constraintLeft_toRightOf="@+id/text_sutdents_number"
        app:layout_constraintRight_toRightOf="@+id/shape_punching_card_record"
        app:layout_constraintTop_toTopOf="@+id/shape_punching_card_record" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_125"
        android:scrollbars="none"
        android:divider="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/smartRefreshLayout"
        app:layout_constraintLeft_toLeftOf="@+id/smartRefreshLayout"
        app:layout_constraintRight_toRightOf="@+id/smartRefreshLayout"
        app:layout_constraintTop_toTopOf="@+id/smartRefreshLayout" />

</android.support.constraint.ConstraintLayout>