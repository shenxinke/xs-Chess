<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/incomplete_chess_game_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@mipmap/incomplete_chess_game_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="当前有未完成的棋局"
        android:textColor="@color/color_763f05"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintRight_toRightOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintTop_toTopOf="@+id/incomplete_chess_game_bg" />

    <ImageView
        android:id="@+id/shutdown"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/shutdown"
        app:layout_constraintBottom_toTopOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintLeft_toRightOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintRight_toRightOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintTop_toTopOf="@+id/incomplete_chess_game_bg" />

    <Button
        android:id="@+id/integral_shopping_mall_yes"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="确定"
        android:textColor="@color/color_622f02"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintLeft_toLeftOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintRight_toLeftOf="@+id/button_skip" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@mipmap/button_skip"
        android:text="取消"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/incomplete_chess_game_bg"
        app:layout_constraintLeft_toRightOf="@+id/integral_shopping_mall_yes"
        app:layout_constraintRight_toRightOf="@+id/incomplete_chess_game_bg" />
</android.support.constraint.ConstraintLayout>