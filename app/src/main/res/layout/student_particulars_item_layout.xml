<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_314"
        android:layout_height="@dimen/dp_155"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_student_particulars_item_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:textColor="@color/color_0150cf"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <ImageView
        android:id="@+id/head_image_left"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_51"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toLeftOf="@+id/image_vs"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_name_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left"
        app:layout_constraintRight_toRightOf="@+id/head_image_left"
        app:layout_constraintTop_toBottomOf="@+id/head_image_left" />

    <TextView
        android:id="@+id/user_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="选手1"
        android:textColor="@color/color_ff9b02"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/head_image_left"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left"
        app:layout_constraintRight_toRightOf="@+id/head_image_left" />

    <ImageView
        android:id="@+id/text_left_sheng"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left"
        app:layout_constraintTop_toTopOf="@+id/head_image_left" />

    <ImageView
        android:id="@+id/text_left_qi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="35dp"
        android:background="@mipmap/student_particulars_with"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left"
        app:layout_constraintTop_toTopOf="@+id/head_image_left" />


    <ImageView
        android:id="@+id/image_vs"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_51"
        android:layout_marginTop="@dimen/dp_56"
        android:background="@mipmap/student_particulars_vs"
        app:layout_constraintLeft_toRightOf="@+id/head_image_left"
        app:layout_constraintRight_toLeftOf="@+id/head_image_right"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <Button
        android:id="@+id/button_appeal"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="申诉"
        android:textColor="@color/color_744100"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_vs"
        app:layout_constraintRight_toRightOf="@+id/image_vs"
        app:layout_constraintTop_toBottomOf="@+id/image_vs" />

    <ImageView
        android:id="@+id/head_image_right"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_48"
        app:layout_constraintLeft_toRightOf="@+id/image_vs"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_name_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_right"
        app:layout_constraintRight_toRightOf="@+id/head_image_right"
        app:layout_constraintTop_toBottomOf="@+id/head_image_right" />

    <TextView
        android:id="@+id/user_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="选手2"
        android:textColor="@color/color_ff9b02"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/head_image_right"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_right"
        app:layout_constraintRight_toRightOf="@+id/head_image_right" />

    <ImageView
        android:id="@+id/text_right_sheng"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_right"
        app:layout_constraintTop_toTopOf="@+id/head_image_right" />

    <ImageView
        android:id="@+id/text_right_qi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_26"
        android:layout_marginTop="35dp"
        android:background="@mipmap/student_particulars_black"
        app:layout_constraintRight_toRightOf="@+id/head_image_right"
        app:layout_constraintTop_toTopOf="@+id/head_image_right" />


</android.support.constraint.ConstraintLayout>