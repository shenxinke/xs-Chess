<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45">

    <TextView
        android:id="@+id/play_name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/class_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/class_name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/play_name"
        app:layout_constraintRight_toLeftOf="@+id/group_name"
        app:layout_constraintTop_toTopOf="@+id/play_name" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/class_name"
        app:layout_constraintRight_toLeftOf="@+id/but_alter"
        app:layout_constraintTop_toTopOf="@+id/play_name" />

    <Button
        android:id="@+id/but_alter"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_29"
        android:background="@mipmap/prepare"
        android:text="更改组别"
        android:textColor="@color/color_ba3200"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@+id/play_name"
        app:layout_constraintLeft_toRightOf="@+id/group_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/play_name" />
</android.support.constraint.ConstraintLayout>