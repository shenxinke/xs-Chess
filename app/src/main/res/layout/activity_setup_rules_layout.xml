<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />


    <ImageView
        android:id="@+id/creat_ai_image_bg"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_350"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/creat_ai_image_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_head" />

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/creat_ai_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_level"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:background="@drawable/shape_setup_rules"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintLeft_toRightOf="@+id/image_head"
        app:layout_constraintBottom_toBottomOf="@+id/image_head"
        app:layout_constraintRight_toRightOf="@+id/image_head"
        app:layout_constraintTop_toBottomOf="@+id/image_head" />

    <Button
        android:id="@+id/button_yes"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="发送邀请"
        android:textColor="@color/color_ad4303"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/creat_ai_image_bg"
        app:layout_constraintRight_toRightOf="@+id/creat_ai_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/creat_ai_image_bg" />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:text="阡陌姐姐"
        android:textColor="@color/color_533500"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/creat_ai_image_bg"
        app:layout_constraintRight_toRightOf="@+id/creat_ai_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/image_head" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="让子"
        android:textColor="@color/color_522802"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/president_text"
        app:layout_constraintRight_toLeftOf="@+id/president_text"
        app:layout_constraintTop_toTopOf="@+id/president_text" />

    <TextView
        android:id="@+id/president_text"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@mipmap/creat_ai_image_switch_bg"
        android:dropDownVerticalOffset="@dimen/dp_1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_19"
        android:text="分先"
        android:textColor="@color/color_522802"
        app:layout_constraintRight_toRightOf="@+id/creat_ai_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_arrows_bg"
        app:layout_constraintBottom_toBottomOf="@+id/president_text"
        app:layout_constraintRight_toRightOf="@+id/president_text"
        app:layout_constraintTop_toTopOf="@+id/president_text" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="时间"
        android:textColor="@color/color_522802"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/president_text2"
        app:layout_constraintRight_toLeftOf="@+id/president_text2"
        app:layout_constraintTop_toTopOf="@+id/president_text2" />

    <TextView
        android:id="@+id/president_text2"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@mipmap/creat_ai_image_switch_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_19"
        android:spinnerMode="dropdown"
        android:text="20 分钟"
        android:textColor="@color/color_522802"
        app:layout_constraintRight_toRightOf="@+id/president_text"
        app:layout_constraintTop_toBottomOf="@+id/president_text5" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_arrows_bg"
        app:layout_constraintBottom_toBottomOf="@+id/president_text2"
        app:layout_constraintRight_toRightOf="@+id/president_text2"
        app:layout_constraintTop_toTopOf="@+id/president_text2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="读秒"
        android:textColor="@color/color_522802"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/president_text3"
        app:layout_constraintRight_toLeftOf="@+id/president_text3"
        app:layout_constraintTop_toTopOf="@+id/president_text3" />

    <TextView
        android:id="@+id/president_text3"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_switch_bg"
        android:dropDownVerticalOffset="@dimen/dp_1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_10"
        android:spinnerMode="dropdown"
        android:text="15 秒"
        android:textColor="@color/color_522802"
        app:layout_constraintRight_toRightOf="@+id/creat_ai_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/president_text2" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_arrows_bg"
        app:layout_constraintBottom_toBottomOf="@+id/president_text3"
        app:layout_constraintRight_toRightOf="@+id/president_text3"
        app:layout_constraintTop_toTopOf="@+id/president_text3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="超时次数"
        android:textColor="@color/color_522802"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/president_text4"
        app:layout_constraintRight_toLeftOf="@+id/president_text4"
        app:layout_constraintTop_toTopOf="@+id/president_text4" />

    <TextView
        android:id="@+id/president_text4"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_switch_bg"
        android:dropDownVerticalOffset="@dimen/dp_1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_10"
        android:spinnerMode="dropdown"
        android:text="3 次"
        android:textColor="@color/color_522802"
        app:layout_constraintRight_toRightOf="@+id/creat_ai_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/president_text3" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_arrows_bg"
        app:layout_constraintBottom_toBottomOf="@+id/president_text4"
        app:layout_constraintRight_toRightOf="@+id/president_text4"
        app:layout_constraintTop_toTopOf="@+id/president_text4" />


    <TextView
        android:id="@+id/text_son"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="棋盘路数"
        android:textColor="@color/color_522802"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/president_text5"
        app:layout_constraintRight_toLeftOf="@+id/president_text5"
        app:layout_constraintTop_toTopOf="@+id/president_text5" />

    <TextView
        android:id="@+id/president_text5"
        android:layout_width="@dimen/dp_169"
        android:layout_height="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_switch_bg"
        android:dropDownVerticalOffset="@dimen/dp_1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_10"
        android:spinnerMode="dropdown"
        android:text="19 × 19"
        android:textColor="@color/color_522802"
        app:layout_constraintRight_toRightOf="@+id/creat_ai_image_bg"
        app:layout_constraintTop_toBottomOf="@+id/president_text" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/creat_ai_image_arrows_bg"
        app:layout_constraintBottom_toBottomOf="@+id/president_text5"
        app:layout_constraintRight_toRightOf="@+id/president_text5"
        app:layout_constraintTop_toTopOf="@+id/president_text5" />

</android.support.constraint.ConstraintLayout>
