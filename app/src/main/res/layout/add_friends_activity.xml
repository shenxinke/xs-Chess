<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/add_friends_layout"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300"
        android:background="@mipmap/question_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_out"
        app:layout_constraintTop_toTopOf="@+id/add_friends_layout"
        app:layout_constraintRight_toRightOf="@+id/add_friends_layout"
        android:background="@mipmap/guanbi"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35" />

    <ImageView
        android:id="@+id/add_head_image"
        app:layout_constraintTop_toTopOf="@+id/add_friends_layout"
        app:layout_constraintLeft_toLeftOf="@+id/add_friends_layout"
        app:layout_constraintRight_toRightOf="@+id/add_friends_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />

    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:textColor="@color/color_522802"
        app:layout_constraintBottom_toTopOf="@+id/linearlayout"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/add_friends_layout"
        app:layout_constraintRight_toRightOf="@+id/add_friends_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:background="@drawable/shape_add_friend_message"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_110"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/add_friends_layout"
        app:layout_constraintBottom_toBottomOf="@+id/add_friends_layout"
        app:layout_constraintLeft_toLeftOf="@+id/add_friends_layout"
        app:layout_constraintRight_toRightOf="@+id/add_friends_layout"
        >
        <EditText
            android:id="@+id/request_text"
            android:textSize="12sp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入好友验证消息"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>



    <ImageView
        android:id="@+id/send_request"
        app:layout_constraintBottom_toBottomOf="@+id/add_friends_layout"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/add_friend_yes"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_35" />

    <TextView
        android:text="发送请求"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/color_993200"
        app:layout_constraintTop_toTopOf="@+id/send_request"
        app:layout_constraintBottom_toBottomOf="@+id/send_request"
        app:layout_constraintLeft_toLeftOf="@+id/send_request"
        app:layout_constraintRight_toRightOf="@+id/send_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>