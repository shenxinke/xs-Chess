<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_200"
        android:background="@mipmap/incomplete_chess_game_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_703b0c"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg"/>

    <TextView
        android:id="@+id/match_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_703b0c"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_goneMarginTop="@dimen/dp_70"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/school_name"/>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="确定"
        android:textColor="@color/color_703b0c"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toLeftOf="@+id/button_skip" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/button_skip"
        android:text="取消"
        android:visibility="gone"
        android:textColor="@color/color_0461d2"
        app:layout_constraintLeft_toRightOf="@+id/button_ok"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/button_ok"/>

</android.support.constraint.ConstraintLayout>