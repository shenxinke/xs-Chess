<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_314"
        android:layout_height="@dimen/dp_134"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_competition_management"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/competition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_11"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/competition_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/wai_content_color"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/competition_name" />

    <TextView
        android:id="@+id/competition_time"
        android:layout_width="@dimen/dp_284"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/wai_content_color"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/competition_type" />

    <TextView
        android:id="@+id/competition_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/wai_content_color"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/competition_time" />

    <Button
        android:id="@+id/button_status"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/button_skip"
        android:textColor="@color/color_0967a9"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/competition_status"
        app:layout_constraintTop_toBottomOf="@+id/competition_status" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距开始
0天23小时59分钟20秒"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/button_status"
        app:layout_constraintLeft_toRightOf="@+id/button_status"
        app:layout_constraintTop_toTopOf="@+id/button_status" />

    <Button
        android:id="@+id/button_management"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_61"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:textColor="@color/color_a53f02"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/button_status"
        app:layout_constraintTop_toBottomOf="@+id/competition_status" />

</android.support.constraint.ConstraintLayout>