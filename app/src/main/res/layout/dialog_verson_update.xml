<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/incomplete_chess_game_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="发现新版本"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toBottomOf="@+id/dialog_hint_title">

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </ScrollView>

    <Button
        android:visibility="gone"
        android:id="@+id/but_dialog_down"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:gravity="center"
        android:text="立即更新"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/checkbox"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background" />

    <CheckBox
        android:visibility="gone"
        android:id="@+id/checkbox"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24" />

    <TextView
        android:visibility="gone"
        android:id="@+id/text"
        app:layout_constraintTop_toTopOf="@+id/checkbox"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox"
        app:layout_constraintLeft_toRightOf="@+id/checkbox"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="不再提醒"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="gone"
        android:id="@+id/but_dialog_ok"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:gravity="center"
        android:text="立即更新"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@+id/checkbox"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toLeftOf="@+id/but_dialog_cancle" />

    <Button
        android:visibility="gone"
        android:id="@+id/but_dialog_cancle"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/button_skip"
        android:gravity="center"
        android:text="暂不更新"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toTopOf="@+id/but_dialog_ok"
        app:layout_constraintLeft_toRightOf="@+id/but_dialog_ok"
        app:layout_constraintRight_toRightOf="@+id/image_background"
          />

</android.support.constraint.ConstraintLayout>