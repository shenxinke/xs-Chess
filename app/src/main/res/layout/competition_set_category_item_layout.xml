<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_85"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_competition_set_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:text="组别名称："
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_type"
        android:text="比赛类型："
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_name"/>

    <TextView
        android:id="@+id/text_number"
        android:text="参赛棋力："
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_type"/>

    <Button
        android:id="@+id/button_new_group"
        android:text="编辑"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:layout_constraintBottom_toTopOf="@+id/button_delete"
        android:layout_marginEnd="@dimen/dp_6"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        android:textColor="@color/color_ab4402"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:layout_width="@dimen/dp_51"
        android:layout_height="@dimen/dp_20" />

    <Button
        android:id="@+id/button_delete"
        android:text="删除"
        android:textSize="12sp"
       app:layout_constraintTop_toBottomOf="@+id/button_new_group"
        app:layout_constraintBottom_toBottomOf="@+id/text_number"
        app:layout_constraintRight_toRightOf="@+id/button_new_group"
        android:textColor="@color/color_0058b0"
        android:background="@mipmap/button_skip"
        android:layout_width="@dimen/dp_51"
        android:layout_height="@dimen/dp_20" />
</android.support.constraint.ConstraintLayout>