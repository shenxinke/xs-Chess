<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_bu_ju"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_226"
                android:background="@mipmap/bu_ju" />

            <ImageView
                android:id="@+id/image_shou_jing"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_226"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/shou_jing" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_si_huo"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_226"
                android:background="@mipmap/si_huo" />

            <ImageView
                android:id="@+id/image_guan_zi"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_226"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/guan_zi" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>