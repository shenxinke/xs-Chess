<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_af5804"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15sp" />

    <com.xswq.chess.myapplication.customview.MyProgressBar
        android:id="@+id/my_progress_bar"
        android:layout_width="132dp"
        android:layout_height="17dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:nearOverText=""
        app:overText="" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/color_af5804"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/my_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/name" />


    <ImageView
        android:id="@+id/image_ok"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"
        android:background="@mipmap/teacher_daily_mission_ok"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/button_skip"
        android:text="去完成"
        android:textColor="@color/color_276bbd"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/text_view"
        android:textSize="9sp"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="@+id/my_progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/my_progress_bar"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_af5804"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="@dimen/dp_170"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>