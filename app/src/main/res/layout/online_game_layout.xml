<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500"
        android:layout_marginTop="@dimen/dp_60">

        <ImageView
            android:id="@+id/imageView3_up"
            android:layout_width="@dimen/dp_262"
            android:layout_height="@dimen/dp_130"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/imageView2_friend"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@mipmap/upplaychess" />


        <ImageView
            android:id="@+id/imageView2_friend"
            android:layout_width="@dimen/dp_262"
            android:layout_height="@dimen/dp_134"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView_ai"
            app:srcCompat="@mipmap/friendplaychess" />

        <ImageView
            android:id="@+id/imageView_ai"
            android:layout_width="@dimen/dp_262"
            android:layout_height="@dimen/dp_134"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/aiplaychess" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
