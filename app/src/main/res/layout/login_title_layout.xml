<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:id="@+id/login_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            android:visibility="invisible"
            android:background="@mipmap/login_back"
            app:layout_constraintBottom_toBottomOf="@+id/title_main"
            app:layout_constraintLeft_toLeftOf="@+id/title_main"
            app:layout_constraintTop_toTopOf="@+id/title_main" />

        <TextView
            android:id="@+id/login_titles"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/login_back"
            app:layout_constraintLeft_toLeftOf="@+id/title_main"
            app:layout_constraintRight_toRightOf="@+id/title_main"
            app:layout_constraintTop_toTopOf="@+id/login_back" />


        <TextView
            android:id="@+id/login_queding"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_5"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/glod"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            app:layout_goneMarginRight="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/login_back"
            app:layout_constraintRight_toLeftOf="@+id/user_help"
            app:layout_constraintTop_toTopOf="@+id/login_back" />

        <ImageView
            android:id="@+id/user_help"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@mipmap/user_help"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/login_back"
            app:layout_constraintRight_toRightOf="@+id/title_main"
            app:layout_constraintTop_toTopOf="@+id/login_back" />

        <ImageView
            android:id="@+id/user_search"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_25"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@mipmap/personal_search"
            app:layout_constraintBottom_toBottomOf="@+id/login_back"
            app:layout_constraintRight_toLeftOf="@+id/login_queding"
            app:layout_constraintTop_toTopOf="@+id/login_back" />

    </android.support.constraint.ConstraintLayout>


    <ImageView
        android:id="@+id/login_titleimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_96"
        android:src="@mipmap/login_logo"
        android:visibility="gone" />
</merge>