<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_167"
        android:layout_height="@dimen/dp_310"
        android:layout_marginLeft="@dimen/dp_14"
        android:background="@drawable/shape_play_by_play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="@dimen/dp_140"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="A组"
        android:textColor="@color/color_0149cd"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_type"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/match_type"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="比赛类型:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_tournament"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"

        app:layout_constraintTop_toBottomOf="@+id/group_name" />

    <TextView
        android:id="@+id/match_tournament"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="比赛赛制:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_way"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_type" />

    <TextView
        android:id="@+id/match_way"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="判棋方式:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_judgeName"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_tournament" />

    <TextView
        android:id="@+id/match_judgeName"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="裁         判:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/match_level"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_way" />

    <TextView
        android:id="@+id/match_level"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="参赛棋力:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_people"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_judgeName" />

    <TextView
        android:id="@+id/match_people"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="参赛人数:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_round"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_level" />

    <TextView
        android:id="@+id/match_round"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="比赛轮次:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_round_arrange"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_people" />

    <TextView
        android:id="@+id/match_round_arrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="轮次安排:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_rule"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_round" />

    <Button
        android:id="@+id/button_look"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@mipmap/prepare"
        android:text="查看"
        android:textColor="@color/color_c05b00"
        app:layout_constraintBottom_toBottomOf="@+id/match_round_arrange"
        app:layout_constraintLeft_toRightOf="@+id/match_round_arrange"
        app:layout_constraintTop_toTopOf="@+id/match_round_arrange" />

    <TextView
        android:id="@+id/match_rule"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="对局规则:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/lay_time"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_round_arrange" />


    <TextView
        android:id="@+id/lay_time"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="迟到时间:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_time"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_rule" />

    <TextView
        android:id="@+id/match_time"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="对局时间:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/match_seconds_time"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/lay_time" />

    <TextView
        android:id="@+id/match_seconds_time"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="读秒时间:"
        android:textColor="@color/wai_content_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/text_name_full"
        app:layout_constraintLeft_toLeftOf="@+id/match_type"
        app:layout_constraintTop_toBottomOf="@+id/match_time"
        app:layout_goneMarginBottom="@dimen/dp_15" />

    <TextView
        android:id="@+id/text_name_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="参赛名额已满"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/match_seconds_time" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/play_by_play_apply"
        android:text="报名"
        android:textColor="@color/color_cf5003"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_name_full"
        app:layout_constraintLeft_toLeftOf="@+id/text_name_full"
        app:layout_constraintRight_toRightOf="@+id/text_name_full"
        app:layout_constraintTop_toTopOf="@+id/text_name_full" />


</android.support.constraint.ConstraintLayout>