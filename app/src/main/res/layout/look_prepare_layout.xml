<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prepare_lessons_backgroud">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_410"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/prepare_lessons_backgrout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background" />

    <android.support.v4.view.ViewPager
        android:id="@+id/look_prepare_pager"
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_170"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_look_image_backgrou"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toBottomOf="@+id/title_name" />

    <ImageView
        android:id="@+id/larger_map"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@mipmap/teacher_show_big"
        app:layout_constraintBottom_toBottomOf="@+id/look_prepare_pager"
        app:layout_constraintRight_toRightOf="@+id/look_prepare_pager" />

    <ScrollView
        android:id="@+id/look_text_background"
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_look_text_backgrou"
        app:layout_constraintLeft_toLeftOf="@+id/look_prepare_pager"
        app:layout_constraintRight_toRightOf="@+id/look_prepare_pager"
        app:layout_constraintTop_toBottomOf="@+id/look_prepare_pager">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="@dimen/dp_315"
            android:layout_height="@dimen/dp_150"
            android:padding="@dimen/dp_15"
            android:textColor="@color/wai_content_color"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/look_text_background"
            app:layout_constraintLeft_toLeftOf="@+id/look_text_background"
            app:layout_constraintRight_toRightOf="@+id/look_text_background"
            app:layout_constraintTop_toTopOf="@+id/look_text_background" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>