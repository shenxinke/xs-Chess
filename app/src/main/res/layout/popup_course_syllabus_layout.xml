<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half" />

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/popup_course_syllabus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="编辑本园"
        android:textColor="@color/color_622f02"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/bg_image"
        app:layout_constraintRight_toRightOf="@+id/bg_image"
        app:layout_constraintTop_toTopOf="@+id/bg_image" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="本园名称:"
        android:textColor="@color/color_622f02"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/bg_image"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <TextView
        android:id="@+id/class_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_popup_cpurse_syllabus_bg"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/color_622f02"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        app:layout_constraintRight_toRightOf="@+id/bg_image"
        app:layout_constraintTop_toTopOf="@+id/text_name" />

    <TextView
        android:id="@+id/text_class_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="课件设置:"
        android:textColor="@color/color_622f02"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/bg_image"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        app:layout_constraintRight_toRightOf="@+id/bg_image"
        app:layout_constraintTop_toTopOf="@+id/text_class_set" />

    <ImageView
        android:id="@+id/radio_button_unchecked"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@mipmap/radio_button_checked"
        app:layout_constraintBottom_toTopOf="@+id/button_ok"
        app:layout_constraintLeft_toLeftOf="@+id/bg_image" />

    <TextView
        android:id="@+id/text_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="全选"
        android:textColor="@color/color_622f02"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/radio_button_unchecked"
        app:layout_constraintLeft_toRightOf="@+id/radio_button_unchecked"
        app:layout_constraintTop_toTopOf="@+id/radio_button_unchecked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="*勾选表示课件可被本园观看"
        android:textColor="@color/color_622f02"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/radio_button_unchecked"
        app:layout_constraintLeft_toRightOf="@+id/text_all"
        app:layout_constraintTop_toTopOf="@+id/radio_button_unchecked" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="确定"
        android:textColor="@color/color_622f02"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_image"
        app:layout_constraintLeft_toLeftOf="@+id/bg_image"
        app:layout_constraintRight_toLeftOf="@+id/button_cleack" />

    <Button
        android:id="@+id/button_cleack"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/button_skip"
        android:text="取消"
        android:textColor="@color/color_0149cd"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_ok"
        app:layout_constraintLeft_toRightOf="@+id/button_ok"
        app:layout_constraintRight_toRightOf="@+id/bg_image" />
</android.support.constraint.ConstraintLayout>