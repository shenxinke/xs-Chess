<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_421"
        android:layout_marginBottom="@dimen/dp_147"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/competition_management_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_schedule"
        android:layout_width="@dimen/dp_262"
        android:layout_height="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@mipmap/schedule_two"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        android:text="组别信息"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="比赛规则"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_schedule"
        app:layout_constraintRight_toRightOf="@+id/image_schedule"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_23"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        android:text="开赛时间"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:id="@+id/text_people_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_55"
        android:text="参赛人数:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <com.xswq.chess.myapplication.customview.MaterialSpinner
        android:id="@+id/edit_text_people_number"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/textview_round_border"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:spinnerMode="dropdown"
        android:textColor="@color/color_0058b0"
        app:ms_hint="请选择参赛人数"
        app:ms_hint_color="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_people_number"
        app:layout_constraintLeft_toRightOf="@+id/text_people_number"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/text_people_number" />

    <TextView
        android:id="@+id/text_game_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="比赛轮次:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/text_people_number" />

    <com.xswq.chess.myapplication.customview.MaterialSpinner
        android:id="@+id/edit_text_game_rounds"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/textview_round_border"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:spinnerMode="dropdown"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        android:text="请选择比赛轮次"
        app:layout_constraintBottom_toBottomOf="@+id/text_game_rounds"
        app:layout_constraintLeft_toRightOf="@+id/text_game_rounds"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/text_game_rounds"
        app:ms_hint="请选择比赛轮次"
        app:ms_hint_color="@color/color_0058b0" />

    <TextView
        android:id="@+id/text_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="对局时间:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/text_game_rounds" />

    <com.xswq.chess.myapplication.customview.MaterialSpinner
        android:id="@+id/edit_text_game_time"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/textview_round_border"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:spinnerMode="dropdown"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_game_time"
        app:layout_constraintLeft_toRightOf="@+id/text_game_time"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/text_game_time"
        app:ms_hint="请选择对局时间"
        app:ms_hint_color="@color/color_0058b0" />

    <TextView
        android:id="@+id/text_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="读秒时间:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/text_game_time" />

    <com.xswq.chess.myapplication.customview.MaterialSpinner
        android:id="@+id/edit_text_seconds"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/textview_round_border"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:spinnerMode="dropdown"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_seconds"
        app:layout_constraintLeft_toRightOf="@+id/text_seconds"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/text_seconds"
        app:ms_hint="请选择读秒时间"
        app:ms_hint_color="@color/color_0058b0" />

    <TextView
        android:id="@+id/text_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="对局规则:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/text_seconds" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分先  黑贴3又3/4子"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_11"
        app:layout_constraintBottom_toBottomOf="@+id/text_text"
        app:layout_constraintLeft_toLeftOf="@+id/edit_text_seconds" />

    <TextView
        android:id="@+id/text_lay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="迟到时间:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/text_text" />

    <com.xswq.chess.myapplication.customview.MaterialSpinner
        android:id="@+id/edit_text_lay_time"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/textview_round_border"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:spinnerMode="dropdown"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_lay_time"
        app:layout_constraintLeft_toRightOf="@+id/text_lay_time"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/text_lay_time"
        app:ms_hint="请选择迟到时间"
        app:ms_hint_color="@color/color_0058b0" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_36"
        android:background="@mipmap/setup_btn"
        android:text="下一步"
        android:textColor="@color/color_cf5003"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/image_bg" />

</android.support.constraint.ConstraintLayout>