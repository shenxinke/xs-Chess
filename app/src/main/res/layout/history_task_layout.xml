<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <TextView
        android:id="@+id/task_start_etsearch"
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_62"
        android:background="@drawable/editview_round_border"
        android:drawableEnd="@mipmap/date"
        android:editable="false"
        android:gravity="center"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/task_start_etsearch"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/task_start_etsearch"
        android:text="至"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/task_end_etsearch"
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_32"
        android:layout_alignTop="@+id/task_start_etsearch"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_toEndOf="@+id/task_start_etsearch"
        android:background="@drawable/editview_round_border"
        android:drawableEnd="@mipmap/date"
        android:editable="false"
        android:gravity="center"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/task_ivDeleteText"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_40"
        android:layout_alignTop="@+id/task_start_etsearch"
        android:layout_alignBottom="@+id/task_end_etsearch"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:src="@mipmap/personal_search" />

    <RelativeLayout
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_500"
        android:layout_below="@+id/task_start_etsearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/history_task_upbounground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_130"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/worktime"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="@dimen/dp_86"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/zhengquelv"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="@dimen/dp_94"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/xititotal"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:background="@drawable/easyreclyview_history_task_upbounground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_500"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginBottom="@dimen/dp_10"
            android:divider="@color/transparent"
            android:scrollbars="none">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/task_history_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <RelativeLayout
            android:id="@+id/url_fragment_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/topic_ids"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_centerInParent="true"
                android:src="@mipmap/no_data" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topic_ids"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:text="暂无数据"
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
