<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/head_image_left"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="小熊维尼"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/head_image_left"
        app:layout_constraintLeft_toRightOf="@+id/head_image_left"
        app:layout_constraintTop_toTopOf="@+id/head_image_left" />

    <TextView
        android:id="@+id/text_left_qi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="35dp"
        android:background="@mipmap/student_particulars_with"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left"
        app:layout_constraintTop_toTopOf="@+id/head_image_left"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/image_vs"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_51"
        android:background="@mipmap/student_particulars_vs"
        app:layout_constraintBottom_toBottomOf="@+id/head_image_left"
        app:layout_constraintLeft_toRightOf="@+id/text_name_left"
        app:layout_constraintRight_toLeftOf="@+id/text_name_right"
        app:layout_constraintTop_toTopOf="@+id/head_image_left" />

    <ImageView
        android:id="@+id/head_image_right"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/head_image_left"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_name_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:text="喵星人"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/head_image_right"
        app:layout_constraintRight_toLeftOf="@+id/head_image_right"
        app:layout_constraintTop_toTopOf="@+id/head_image_right" />

    <ImageView
        android:id="@+id/text_right_qi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_26"
        android:layout_marginTop="35dp"
        android:background="@mipmap/student_particulars_black"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintRight_toRightOf="@+id/head_image_right"
        app:layout_constraintTop_toTopOf="@+id/head_image_right"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/chess_board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:background="@mipmap/chess_board"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/head_image_left" />

    <TextView
        android:id="@+id/button_one"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:gravity="center"
        android:text="停一手"
        android:textColor="#ad4303"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chess_board" />

    <TextView
        android:id="@+id/button_two"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:gravity="center"
        android:text="认输"
        android:textColor="#ad4303"
        app:layout_constraintBottom_toBottomOf="@+id/button_one"
        app:layout_constraintLeft_toRightOf="@+id/button_one" />

    <TextView
        android:id="@+id/button_three"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:gravity="center"
        android:text="数棋"
        android:textColor="#ad4303"
        app:layout_constraintBottom_toBottomOf="@+id/button_one"
        app:layout_constraintLeft_toRightOf="@+id/button_two" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_239"
        android:background="@mipmap/incomplete_chess_game_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:background="@mipmap/guanbi"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toRightOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/image" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="某某幼儿园吃子争霸赛"
        android:textColor="@color/color_aa4800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image"
        app:layout_constraintRight_toRightOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/image" />


    <ImageView
        android:id="@+id/image_bg2"
        android:layout_width="@dimen/dp_252"
        android:layout_height="@dimen/dp_114"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_student_particulars_item_bg"
        app:layout_constraintLeft_toLeftOf="@+id/text_title"
        app:layout_constraintRight_toRightOf="@+id/text_title"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <TextView
        android:id="@+id/text_title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:textColor="@color/color_aa4800"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg2"
        app:layout_constraintRight_toRightOf="@+id/image_bg2"
        app:layout_constraintTop_toTopOf="@+id/image_bg2" />

    <ImageView
        android:id="@+id/head_image_left2"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_26"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg2"
        app:layout_constraintTop_toTopOf="@+id/image_bg2" />

    <TextView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="35dp"
        android:background="@mipmap/student_particulars_with"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left2"
        app:layout_constraintTop_toTopOf="@+id/head_image_left2"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/text_name_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="用户昵称"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_left2"
        app:layout_constraintRight_toRightOf="@+id/head_image_left2"
        app:layout_constraintTop_toBottomOf="@+id/head_image_left2" />

    <ImageView
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/student_particulars_vs"
        app:layout_constraintLeft_toRightOf="@+id/text_name_left2"
        app:layout_constraintRight_toLeftOf="@+id/head_image_right2"
        app:layout_constraintTop_toTopOf="@+id/image_bg2" />

    <ImageView
        android:id="@+id/head_image_right2"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_26"
        app:layout_constraintRight_toRightOf="@+id/image_bg2"
        app:layout_constraintTop_toTopOf="@+id/image_bg2" />

    <TextView
        android:id="@+id/text_name_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="用户昵称"
        android:textColor="@color/wai_content_color"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/head_image_right2"
        app:layout_constraintRight_toRightOf="@+id/head_image_right2"
        app:layout_constraintTop_toBottomOf="@+id/head_image_right2" />

    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_26"
        android:layout_marginTop="35dp"
        android:background="@mipmap/student_particulars_black"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintRight_toRightOf="@+id/head_image_right2"
        app:layout_constraintTop_toTopOf="@+id/head_image_right2"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/text_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_19"
        android:text="比赛将于 05:23 后开始"
        android:textColor="@color/color_aa4800"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintLeft_toLeftOf="@+id/image"
        app:layout_constraintRight_toRightOf="@+id/image" />

</android.support.constraint.ConstraintLayout>