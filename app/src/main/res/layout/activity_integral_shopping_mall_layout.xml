<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/login_title_layout" />


    <ImageView
        android:id="@+id/integral_shopping_mall_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@mipmap/integral_shopping_mall_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/for_record"
        app:layout_constraintTop_toTopOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintRight_toRightOf="@+id/integral_shopping_mall_bg"
        android:background="@mipmap/integral_shopping_mall_for_record"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45" />

    <Button
        android:id="@+id/integral_shopping_mall_all"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_7"
        android:background="@mipmap/integral_shopping_mall_all"
        android:textColor="@color/color_ad4106"
        app:layout_constraintBottom_toBottomOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/integral_shopping_mall_have"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/integral_shopping_mall_no"
        android:textColor="@color/color_ad4106"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/integral_shopping_mall_all" />

    <Button
        android:id="@+id/integral_shopping_mall_no_have"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/integral_shopping_mall_no"
        android:textColor="@color/color_ad4106"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/integral_shopping_mall_have" />


    <android.support.design.widget.TabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/integral_tablayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/integral_viewpage"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_50"
        android:overScrollMode="never"
        app:tabBackground="@drawable/integral_shopping_tab_bg_selector"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="10dp"
        app:tabSelectedTextColor="@color/color_d1440c"
        app:tabTextAppearance="@style/tab_integral_shopping_style"
        app:tabTextColor="@color/color_1859a8"
        app:xTabTextBold="true">

    </android.support.design.widget.TabLayout>

    <com.xswq.chess.myapplication.customview.ViewPagerSlide
        android:id="@+id/integral_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_170"
        android:background="@drawable/shape_integral_shopping_bg"
        android:padding="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:visibility="gone"
        android:id="@+id/integral_shopping_use"
        app:layout_constraintTop_toBottomOf="@+id/integral_viewpage"
        app:layout_constraintBottom_toBottomOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintLeft_toLeftOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintRight_toRightOf="@+id/integral_shopping_mall_bg"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="使用"
        android:textStyle="bold"
        android:textColor="@color/color_703b0c"
        android:background="@mipmap/main_yellow_next"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40" />


    <Button
        android:visibility="gone"
        android:id="@+id/integral_shopping"
        app:layout_constraintTop_toBottomOf="@+id/integral_viewpage"
        app:layout_constraintBottom_toBottomOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintLeft_toLeftOf="@+id/integral_shopping_mall_bg"
        app:layout_constraintRight_toRightOf="@+id/integral_shopping_mall_bg"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="购买"
        android:textStyle="bold"
        android:textColor="@color/color_703b0c"
        android:background="@mipmap/integral_shopping_mall_shopping"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40" />

</android.support.constraint.ConstraintLayout>