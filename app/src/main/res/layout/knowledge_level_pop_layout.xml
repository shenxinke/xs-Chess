<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/level_layout"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_500"
        android:background="@mipmap/popup_course_syllabus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/levels_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="请选择级别"
        android:textColor="@color/grey_shen"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/level_layout"
        app:layout_constraintRight_toRightOf="@+id/level_layout"
        app:layout_constraintTop_toTopOf="@+id/level_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_271"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/shape_knowledge_level_bg"
        app:layout_constraintLeft_toLeftOf="@+id/level_layout"
        app:layout_constraintRight_toRightOf="@+id/level_layout"
        app:layout_constraintTop_toBottomOf="@+id/levels_id" />

    <com.xswq.chess.myapplication.customview.HorizontalListView
        android:id="@+id/horizontalListView"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />
    <ImageView
        android:id="@+id/image_bg2"
        android:layout_width="@dimen/dp_271"
        android:layout_height="@dimen/dp_377"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="@id/level_layout"
        app:layout_constraintRight_toRightOf="@+id/level_layout"
        app:layout_constraintTop_toBottomOf="@+id/image_bg"
        android:background="@mipmap/question_list_bg"/>

    <GridView
        android:id="@+id/question_level_id"
        android:layout_width="@dimen/dp_271"
        android:layout_height="@dimen/dp_377"
        android:layout_marginTop="@dimen/dp_8"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/dp_11"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="@id/level_layout"
        app:layout_constraintRight_toRightOf="@+id/level_layout"
        app:layout_constraintTop_toBottomOf="@+id/image_bg" />

    <ImageView
        android:id="@+id/shutdown_id"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:src="@mipmap/shutdown"
        app:layout_constraintLeft_toRightOf="@+id/level_layout"
        app:layout_constraintRight_toRightOf="@+id/level_layout"
        app:layout_constraintTop_toTopOf="@+id/level_layout" />

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
