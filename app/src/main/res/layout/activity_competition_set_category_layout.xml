<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_421"
        android:layout_marginBottom="@dimen/dp_147"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/competition_management_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_schedule"
        android:layout_width="@dimen/dp_262"
        android:layout_height="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@mipmap/schedule_three"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        android:text="比赛信息"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="比赛介绍"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_schedule"
        app:layout_constraintRight_toRightOf="@+id/image_schedule"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_23"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        android:text="设置组别"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <ScrollView
        android:layout_width="@dimen/dp_321"
        android:layout_height="@dimen/dp_240"
        android:layout_marginTop="@dimen/dp_28"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.xswq.chess.myapplication.customview.MyListView
                android:id="@+id/list_view"
                android:scrollbars="none"
                android:divider="@color/transparent"
                android:layout_width="@dimen/dp_321"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/button_new_group"
                android:text="新建组别"
                android:textSize="11sp"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/color_ab4402"
                android:background="@mipmap/integral_shopping_mall_yes"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_25" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_next"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_36"
        android:background="@mipmap/setup_btn"
        android:text="下一步"
        android:textColor="@color/color_cf5003"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"/>

</android.support.constraint.ConstraintLayout>