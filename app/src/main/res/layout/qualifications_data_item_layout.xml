<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"  />

    <TextView
        android:id="@+id/level"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/level"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/topic_number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/number"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/schedule"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/topic_number"
        app:layout_constraintTop_toTopOf="@+id/name" />
</android.support.constraint.ConstraintLayout>