<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_421"
        android:layout_marginBottom="@dimen/dp_147"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/competition_management_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_schedule"
        android:layout_width="@dimen/dp_262"
        android:layout_height="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_41"
        android:background="@mipmap/schedule_two"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        android:text="比赛信息"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="比赛介绍"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_schedule"
        app:layout_constraintRight_toRightOf="@+id/image_schedule"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_23"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        android:text="设置组别"
        android:textColor="@color/color_893000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_55"
        android:text="比赛介绍:"
        android:textColor="@color/color_0058b0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_218"
        android:layout_marginTop="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_25"
        android:background="@drawable/textview_round_border"
        android:gravity="top"
        android:hint="请输入比赛介绍"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_5"
        android:textColorHint="@color/color_0058b0"
        android:textColor="@color/color_0058b0"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/image_schedule"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_17"
        android:text="0/150"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text"
        app:layout_constraintRight_toRightOf="@+id/edit_text" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_36"
        android:background="@mipmap/setup_btn"
        android:text="下一步"
        android:textColor="@color/color_cf5003"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toBottomOf="@+id/edit_text" />

</android.support.constraint.ConstraintLayout>