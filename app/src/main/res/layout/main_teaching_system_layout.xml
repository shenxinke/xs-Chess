<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <RelativeLayout
        android:id="@+id/teachingsystem_fragment_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/teacher_outline_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/teacher_system_title"
            android:layout_width="@dimen/dp_144"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/textview_round_border"
            android:drawableEnd="@mipmap/icon_down"
            android:gravity="fill_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:textColor="@color/color_1060b5"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/teacher_system_kinds_id"
            android:layout_width="@dimen/dp_144"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/teacher_system_title"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toEndOf="@+id/teacher_system_title"
            android:background="@drawable/textview_round_border"
            android:drawableEnd="@mipmap/icon_down"
            android:textColor="@color/color_1060b5"
            android:gravity="fill_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_12" />

        <ListView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/main_teacher_system_easyview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_system_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:scrollbars="none" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/image_background"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/no_data"
        app:layout_constraintBottom_toBottomOf="@+id/teachingsystem_fragment_rl"
        app:layout_constraintLeft_toLeftOf="@+id/teachingsystem_fragment_rl"
        app:layout_constraintRight_toRightOf="@+id/teachingsystem_fragment_rl"
        app:layout_constraintTop_toTopOf="@+id/teachingsystem_fragment_rl" />

    <TextView
        android:id="@+id/text_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textSize="@dimen/sp_17"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toBottomOf="@+id/image_background" />

</android.support.constraint.ConstraintLayout>
