<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_155"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_integral_shopping_item_bg" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/money_bg"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_integral_shopping_money_bg"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_view"
        app:layout_constraintRight_toRightOf="@+id/image_view"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <ImageView
        android:id="@+id/tian_yuan_bi"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/tian_yuan_bi"
        app:layout_constraintBottom_toBottomOf="@+id/money_bg"
        app:layout_constraintLeft_toLeftOf="@+id/money_bg"
        app:layout_constraintTop_toTopOf="@+id/money_bg" />

    <TextView
        android:id="@+id/text_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_d23f0c"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tian_yuan_bi"
        app:layout_constraintLeft_toRightOf="@+id/tian_yuan_bi"
        app:layout_constraintTop_toTopOf="@+id/tian_yuan_bi" />

    <ImageView
        android:id="@+id/alreadyOwned"
        android:visibility="gone"
        android:background="@mipmap/integral_shopping_mall_already_owned"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="@+id/image_background"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />

</android.support.constraint.ConstraintLayout>