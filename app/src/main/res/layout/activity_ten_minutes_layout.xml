<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_239"
        android:background="@mipmap/incomplete_chess_game_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:background="@mipmap/guanbi"
        app:layout_constraintBottom_toTopOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:id="@+id/text_massage"
        android:layout_width="@dimen/dp_278"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_57"
        android:gravity="center"
        android:textColor="@color/color_893000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_17"
        android:text="*您可点击“提前进入”等待比赛开始"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/button_confirm"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="提前进入"
        android:textColor="@color/color_ad4303"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toLeftOf="@+id/button_cancel" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_36"
        android:background="@mipmap/button_skip"
        android:text="取消"
        android:textColor="@color/color_0967a9"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_confirm"
        app:layout_constraintLeft_toRightOf="@+id/button_confirm"
        app:layout_constraintRight_toRightOf="@+id/image_bg" />

</android.support.constraint.ConstraintLayout>