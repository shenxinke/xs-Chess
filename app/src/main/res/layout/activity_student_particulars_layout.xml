<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/prepare_lessons_button_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xswq.chess.myapplication.customview.HorizontalListView
        android:id="@+id/list_view"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_9"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />


    <ImageButton
        android:id="@+id/button_left_bg"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/prepare_lessons_button_left_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/below_image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/below_image_bg" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_29"
        android:layout_marginStart="@dimen/dp_17"
        android:background="@mipmap/student_particulars_blow_list_check"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/below_image_bg"
        app:layout_constraintLeft_toRightOf="@+id/button_left_bg"
        app:layout_constraintRight_toLeftOf="@+id/button_two"
        app:layout_goneMarginLeft="@dimen/dp_37" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_29"
        android:background="@mipmap/student_particulars_blow_list_uncheck"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_one"
        app:layout_constraintLeft_toRightOf="@+id/button_one" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_29"
        android:background="@mipmap/student_particulars_blow_list_uncheck"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_one"
        app:layout_constraintLeft_toRightOf="@+id/button_two" />


    <ImageButton
        android:id="@+id/button_right_bg"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/prepare_lessons_button_right_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/below_image_bg"
        app:layout_constraintRight_toRightOf="@+id/below_image_bg" />

    <ImageView
        android:id="@+id/below_image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_156"
        android:background="@mipmap/competition_management_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_16"
        android:text="比赛时间:"
        android:textColor="@color/text2"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/below_image_bg"
        app:layout_constraintTop_toTopOf="@+id/below_image_bg" />

    <ListView
        android:id="@+id/blow_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_190"
        android:divider="@color/transparent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_no_data"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@mipmap/no_data"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/blow_list_view"
        app:layout_constraintLeft_toLeftOf="@+id/blow_list_view"
        app:layout_constraintRight_toRightOf="@+id/blow_list_view"
        app:layout_constraintTop_toTopOf="@+id/blow_list_view" />

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="暂无数据"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/image_no_data"
        app:layout_constraintRight_toRightOf="@+id/image_no_data"
        app:layout_constraintTop_toBottomOf="@+id/image_no_data" />
</android.support.constraint.ConstraintLayout>