<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout"/>

    <RelativeLayout
        android:id="@+id/playingchess_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_65"
        android:background="@mipmap/navigation_content_bg"
        android:layout_marginLeft="@dimen/sp_15"
        android:layout_marginRight="@dimen/sp_15"
        android:layout_marginBottom="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/playingchess_user"
            android:layout_width="@dimen/dp_246"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/edittext_bordercolor"
            android:hint="@string/playingchess_username"
            android:paddingStart="@dimen/dp_12"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/playingchess_search"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/playingchess_user"
            android:paddingRight="20dp"
            android:src="@mipmap/personal_search" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_500"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginBottom="@dimen/dp_10"
            android:divider="@color/transparent"
            android:scrollbars="none">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/playingchess_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/playingchess_layout"
        app:layout_constraintRight_toRightOf="@+id/playingchess_layout"
        app:layout_constraintLeft_toLeftOf="@+id/playingchess_layout"
        app:layout_constraintBottom_toBottomOf="@+id/playingchess_layout"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/no_data"  />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/text_background"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="@+id/playingchess_layout"
        app:layout_constraintLeft_toLeftOf="@+id/playingchess_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textSize="@dimen/sp_12" />

</android.support.constraint.ConstraintLayout>
