<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/prepare_tablayout"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_45"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:overScrollMode="never"
            app:tabBackground="@drawable/achievement_download_tab_bg_selector"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="30dp"
            app:tabPaddingStart="30dp"
            app:tabSelectedTextColor="@color/color_0505ff"
            app:tabTextColor="@color/white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/prepare_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_38"
            android:background="@mipmap/personal_juxing"
            android:padding="@dimen/dp_10" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>