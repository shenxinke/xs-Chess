<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_170"
    android:background="@color/color_41beff"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_add_friend_list">

        <ImageView
            android:id="@+id/add_friend_head_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_friend_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="名字"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/add_friend_head_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_friend_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05/04"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/add_friend_name_text"
            app:layout_constraintTop_toBottomOf="@+id/add_friend_name_text" />

        <Button
            android:id="@+id/add_frends_yes"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/add_friend_yes"
            android:text="同意"
            android:textColor="@color/color_993200"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/add_friend_head_image"
            app:layout_constraintRight_toLeftOf="@+id/add_frends_no"
            app:layout_constraintTop_toTopOf="@+id/add_friend_head_image" />

        <Button
            android:id="@+id/add_frends_no"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/add_friend_no"
            android:text="拒绝"
            android:textColor="@color/color_005773"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/add_friend_head_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_friend_head_image" />

        <Button
            android:id="@+id/add_frends_status"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_32"
            android:background="@mipmap/add_friends_status"
            android:textColor="@color/color_993200"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="@+id/add_friend_head_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_friend_head_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_add_friend_message"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_friend_head_image">

            <TextView
                android:id="@+id/add_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/color_14569c"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>