<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/school_name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacher_number" />

    <TextView
        android:id="@+id/teacher_number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/school_name"
        app:layout_constraintRight_toLeftOf="@+id/class_number"
        app:layout_constraintTop_toTopOf="@+id/school_name" />

    <TextView
        android:id="@+id/class_number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/teacher_number"
        app:layout_constraintRight_toLeftOf="@+id/student_number"
        app:layout_constraintTop_toTopOf="@+id/school_name" />

    <TextView
        android:id="@+id/student_number"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/_123123132"
        android:textColor="@color/color_573800"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/class_number"
        app:layout_constraintRight_toLeftOf="@+id/but_alter"
        app:layout_constraintTop_toTopOf="@+id/school_name" />

    <Button
        android:id="@+id/but_alter"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="分园"
        android:textColor="@color/color_ba3200"
        android:visibility="gone"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@+id/school_name"
        app:layout_constraintLeft_toRightOf="@+id/student_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/school_name" />
</android.support.constraint.ConstraintLayout>