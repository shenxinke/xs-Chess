<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    android:background="@drawable/shape_guide_video_backgrou"-->
    <ImageView
        android:id="@+id/guide_video_imageid"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_92"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guide_video_textid"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/guide_video_imageid"
        app:layout_constraintLeft_toRightOf="@+id/guide_video_imageid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide_video_imageid" />


</android.support.constraint.ConstraintLayout>
