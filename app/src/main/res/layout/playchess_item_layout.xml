<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/textview_round_border"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/playchess_head1"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/playchess_head2"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playchess_head1" />

        <ImageView
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@mipmap/vs2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playchess_user1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:ellipsize="end"
            android:paddingVertical="@dimen/dp_12"
            android:singleLine="true"
            android:text="喵星人"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/playchess_head1"
            app:layout_constraintLeft_toRightOf="@+id/playchess_head1"
            app:layout_constraintTop_toTopOf="@+id/playchess_head1" />

        <TextView
            android:id="@+id/playchess_user2"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingVertical="@dimen/dp_12"
            android:singleLine="true"
            android:text="汪星人"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/playchess_head2"
            app:layout_constraintRight_toLeftOf="@+id/playchess_head2"
            app:layout_constraintTop_toTopOf="@+id/playchess_head2" />

        <TextView
            android:id="@+id/playchess_black_levels"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_25"
            android:background="@drawable/blackbgview_round_border"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/playchess_head1"
            app:layout_constraintLeft_toLeftOf="@+id/playchess_head1" />

        <TextView
            android:id="@+id/playchess_white_level"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintBottom_toBottomOf="@+id/playchess_head2"
            app:layout_constraintRight_toRightOf="@+id/playchess_head2"
            android:layout_marginEnd="@dimen/dp_25"
            android:background="@drawable/greybgview_round_border"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
