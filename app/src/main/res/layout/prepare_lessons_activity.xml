<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/login_title_layout" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_69"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/prepare_lessons_button_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/prepare_lessons_button_left_bg"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_11"
        android:visibility="gone"
        android:background="@mipmap/prepare_lessons_button_left_bg"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <Button
        android:id="@+id/theme_class_button"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/prepare_lessons_button_check_bg"
        android:text="主题课"
        android:textColor="@color/color_774801"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/prepare_lessons_button_left_bg"
        app:layout_constraintRight_toLeftOf="@+id/practical_lessons_button"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <Button
        android:id="@+id/practical_lessons_button"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/prepare_lessons_button_uncheck_bg"
        android:text="实战课"
        android:textColor="@color/color_0058b0"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/theme_class_button"
        app:layout_constraintRight_toLeftOf="@+id/model_lesson_button"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />


    <Button
        android:id="@+id/model_lesson_button"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/prepare_lessons_button_uncheck_bg"
        android:text="示范课视频"
        android:textColor="@color/color_0058b0"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/practical_lessons_button"
        app:layout_constraintRight_toLeftOf="@+id/prepare_lessons_button_right_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />


    <ImageButton
        android:id="@+id/prepare_lessons_button_right_bg"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_25"
        android:background="@mipmap/prepare_lessons_button_right_bg"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/model_lesson_button"
        app:layout_constraintRight_toRightOf="@+id/image_bg"
        app:layout_constraintTop_toTopOf="@+id/image_bg" />

    <FrameLayout
        android:id="@+id/prepare_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_125"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@mipmap/teacher_outline_bg"
        android:padding="@dimen/dp_10" />

</android.support.constraint.ConstraintLayout>