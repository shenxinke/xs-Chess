<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/dp_304"
        android:layout_height="@dimen/dp_239"
        android:background="@mipmap/incomplete_chess_game_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8b4501"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="@+id/image_bg"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toLeftOf="@+id/image_bg"
        app:layout_constraintRight_toRightOf="@+id/image_bg" />


    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/integral_shopping_mall_yes"
        android:text="立即缴费"
        android:textColor="@color/color_ad4303"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/prepare_lessons_button_uncheck_bg"
        android:text="切换用户"
        android:textColor="@color/color_1060b5"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="@+id/image_bg"
        app:layout_constraintLeft_toRightOf="@+id/button"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>